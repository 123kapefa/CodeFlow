{
  "ReverseProxy" : {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": { "Path": "/api/auth/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/api" }
        ]
      },
      "user-route": {
        "ClusterId": "user-cluster",
        "Match": { "Path": "/api/users/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/api" }
        ]
      }
    },
    "Clusters": {
      "auth-cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "Destinations": {
          "auth1": { "Address": "https://auth-service:5001/" }
        }
      },
      "user-cluster": {
        "LoadBalancingPolicy": "LeastRequests",
        "Destinations": {
          "user1": { "Address": "https://user-service:5002/" }
        }
      },
      "stat-cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "Destinations": {
          "stat1": { "Address": "https://stat-service:5003/" }
        }
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
